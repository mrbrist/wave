{
	"name": "wave",
	"productName": "wave",
	"version": "0.0.1",
	"description": "A minimal cross-platform music player",
	"license": "MIT",
	"repository": "mrbrist/wave",
	"author": {
		"name": "Joshua Weston",
		"email": "bristol2801@gmail.com"
	},
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"lint": "standard",
		"test": "npm run lint",
		"start": "electron .",
		"pack": "electron-builder --dir",
		"dist": "electron-builder --macos --linux --windows",
		"release": "np"
	},
	"dependencies": {
		"electron-unhandled": "^2.2.0",
		"electron-updater": "^4.0.6",
		"electron-util": "^0.12.0",
		"standard": "^12.0.1"
	},
	"devDependencies": {
		"electron": "^15.5.5",
		"electron-builder": "^20.43.0",
		"np": "^5.0.3"
	},
	"np": {
		"publish": false,
		"releaseDraft": false
	},
	"build": {
		"appId": "com.mrbrist.wave",
		"mac": {
			"category": "public.utility"
		},
		"dmg": {
			"iconSize": 160,
			"contents": [
				{
					"x": 180,
					"y": 170
				},
				{
					"x": 480,
					"y": 170,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			],
			"category": "Utility"
		}
	}
}
